{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "cache": false,
      "outputs": ["dist/**", "cjs/**", "esm/**"]
    },
    "@lettercms/client#build": {
      "dependsOn": [
        "@lettercms/sdk#build"
      ],
      "outputs": [".next/**", ".vercel/**"]
    },
    "@lettercms/dashboard#build": {
      "dependsOn": [
        "@lettercms/sdk#build"
      ],
      "outputs": [".next/**", ".vercel/**"]
    },

    "dev": {
      "cache": false,
      "dependsOn": [
        "build-esm",
        "build-cjs"
      ]
    }
  },
  "ignoreMissingTaskDeps": true
}
